doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Book List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-50 min-h-screen py-10 px-4 sm:px-8 font-sans")
    h1(class="text-4xl font-bold text-center text-gray-800 mb-10 tracking-tight") Book List

    if message
      div(class="max-w-xl mx-auto text-center bg-green-100 border border-green-300 text-green-800 px-6 py-4 rounded-2xl shadow-sm mb-6 text-sm font-medium transition")= message

    if error
      div(class="max-w-xl mx-auto text-center bg-red-100 border border-red-300 text-red-800 px-6 py-4 rounded-2xl shadow-sm mb-6 text-sm font-medium transition")= error

    form(action="/books/search", method="GET", class="max-w-xl mx-auto mb-8")
      input(type="text", name="query", placeholder="Search books...", class="w-full px-5 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition")

      button(type="submit", class="mt-4 w-full px-6 py-3 bg-blue-600 text-white font-semibold rounded-2xl shadow-md hover:bg-blue-700 transition duration-200") Search

    a(href="/books/create", class="block max-w-xl mx-auto text-center text-blue-600 hover:underline font-medium mb-10") + Create New Book

    div(class="overflow-x-auto")
      table(class="min-w-full bg-white rounded-2xl shadow-md overflow-hidden")
        thead(class="bg-gray-100 text-gray-600 text-sm uppercase")
          tr
            th(class="text-left px-6 py-4") Title
            th(class="text-left px-6 py-4") Author
            th(class="text-left px-6 py-4") Description
            th(class="text-left px-6 py-4") Price
            th(class="text-left px-6 py-4") Quantity
            th(class="text-left px-6 py-4") Actions
        tbody
          each book in books
            tr(class="border-t hover:bg-gray-50 transition")
              td(class="px-6 py-4 text-gray-800")= book.title
              td(class="px-6 py-4 text-gray-800")= book.author
              td(class="px-6 py-4 text-gray-600 text-sm")= book.description
              td(class="px-6 py-4 text-gray-800 font-medium") $#{book.price}
              td(class="px-6 py-4 text-gray-800")= book.quantity
              td(class="px-6 py-4 space-x-4")
                a(href=`/books/detail/${book.id}`, class="text-blue-600 hover:underline font-medium text-sm") View
                a(href=`/books/edit/${book.id}`, class="text-yellow-600 hover:underline font-medium text-sm") Edit
                form(action=`/books/delete/${book.id}`, method="POST", class="inline-block" onsubmit="return confirm('Are you sure you want to delete this book?');")
                  button(type="submit", class="text-red-600 hover:underline font-medium text-sm") Delete
