doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Detail #{book.title}
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    body(class="bg-gray-50 text-gray-900 font-sans antialiased min-h-screen")
        div(class="max-w-3xl mx-auto px-6 py-12")

            h1(class="text-4xl font-bold text-center text-gray-800 tracking-tight mb-10") Book Detail

            if message
                div(class="text-center bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-2xl shadow-sm mb-6 text-sm font-medium transition")= message

            if error
                div(class="text-center bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-2xl shadow-sm mb-6 text-sm font-medium transition")= error

            div(class="bg-white p-10 rounded-3xl shadow-xl space-y-8")
                h2(class="text-xl font-semibold mb-4") #{book.title}
                p(class="text-gray-700 mb-4") Author: #{book.author}
                p(class="text-gray-700 mb-4") Description: #{book.description}
                p(class="text-gray-700 mb-4") Price: $#{book.price}
                if book.cover_image
                    img(src=`/images/${book.cover_image}`, alt="Cover Image", class="w-full h-auto rounded-2xl mb-6")
                else
                    p(class="text-gray-700 mb-4") No cover image available.
                a(href="/books/index", class="font-semibold block text-sm text-blue-600 hover:underline mt-4") ‚Üê Back to Book List