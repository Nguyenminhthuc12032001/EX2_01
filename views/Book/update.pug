doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Edit Book #{book.title}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 text-gray-900 font-sans antialiased min-h-screen")
    div(class="max-w-2xl mx-auto px-6 py-16")

      h1(class="text-5xl font-extrabold text-center text-gray-900 mb-12 tracking-tight") Edit Book

      if message
        div(class="text-center bg-green-100 border border-green-300 text-green-800 px-6 py-4 rounded-xl shadow-sm mb-6 text-sm font-medium")= message

      if error
        div(class="text-center bg-red-100 border border-red-300 text-red-800 px-6 py-4 rounded-xl shadow-sm mb-6 text-sm font-medium")= error

      form(action=`/books/${book.id}?_method=PUT`, method="POST", enctype="multipart/form-data", class="bg-white p-10 rounded-3xl shadow-lg space-y-8 transition-all duration-300 ease-in-out")
        input(type="hidden", name="_id", value=book._id)

        div
          label(for="title", class="block text-sm font-semibold text-gray-700 mb-2") Title
          input(type="text", name="title", id="title", value=book.title, required, class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm transition")

        div
          label(for="author", class="block text-sm font-semibold text-gray-700 mb-2") Author
          input(type="text", name="author", id="author", value=book.author, required, class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm transition")

        div
          label(for="description", class="block text-sm font-semibold text-gray-700 mb-2") Description
          textarea(name="description", id="description", required, rows="5", class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm transition") #{book.description}

        div
          label(for="price", class="block text-sm font-semibold text-gray-700 mb-2") Price ($)
          input(type="number", name="price", id="price", value=book.price, step="0.01", required, class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm transition")

        div
          label(for="cover_image", class="block text-sm font-semibold text-gray-700 mb-2") Cover Image
          input(type="file", name="cover_image", id="cover_image", accept="image/*", class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm transition")

        div
          button(type="submit", class="w-full px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-2xl shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300") Update Book
        div(class="text-center")
          a(href="/books/index", class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-2xl shadow-md hover:bg-blue-700 transition duration-200") ‚Üê Back to Book List
